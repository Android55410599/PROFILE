	@Override
	public void onClick(View v) {
		switch (v.getId()) {
		case R.id.btn1:
			Intent i = new Intent(getApplicationContext(), resume.class);
			startActivity(i);
			break;
		case R.id.btnimg:
			Intent j = new Intent(getApplicationContext(), ImageActivity.class);
			startActivity(j);
			break;
		default:
			break;
		}
	}
}